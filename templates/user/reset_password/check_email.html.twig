{% extends "layout/basic.html.twig" %}

{% block title %}Password Reset - {{ site_name }}{% endblock %}

{% block container %}
    <div class="uk-flex uk-flex-center">
        <div class="uk-card uk-card-default uk-width-1-3@m">
            <div class="uk-card-body">
                <p>An email has been sent that contains a link that you can click to reset your password.</p>
                <p>This link will expire in {{ tokenLifetime|date('g') }} hour(s).</p>
                <p>If you don't receive an email please check your spam folder or <a href="{{ path('user_password_reset_request') }}">try again</a>.</p>
            </div>
        </div>
    </div>
{% endblock %}
